# Production Environment Configuration
# Copy to .env and fill in actual values

# Database
POSTGRES_USER=ai_interior_designer
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://ai_interior_designer:your_secure_postgres_password_here@postgres:5432/ai_interior_designer

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# NATS
NATS_URL=nats://nats:4222

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_32_chars_minimum
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_32_chars_minimum

# S3/MinIO Storage
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key_32_chars_minimum
S3_ENDPOINT=http://minio:9000
S3_BUCKET=ai-interior-designer
S3_REGION=us-east-1

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
IKEA_API_KEY=your_ikea_api_key_here
WAYFAIR_API_KEY=your_wayfair_api_key_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
APPLE_CLIENT_ID=your_apple_oauth_client_id
APPLE_CLIENT_SECRET=your_apple_oauth_client_secret

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Application
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_32_chars_minimum
CSRF_SECRET=your_csrf_secret_here_32_chars_minimum

# Email (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RATE_LIMITING=true

# Worker Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,heic,mov,mp4

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# Performance
WORKER_THREADS=4
CLUSTER_WORKERS=2
MEMORY_LIMIT_MB=1024
