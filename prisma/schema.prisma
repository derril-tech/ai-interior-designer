// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String
  locale    String?  @default("en")
  timezone  String?  @default("UTC")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects Project[]

  @@map("users")
}

model Project {
  id          String    @id @default(cuid())
  userId      String
  title       String
  address     String?
  currency    String?   @default("USD")
  stylePrefs  String[]  @default([])
  budgetCents Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  rooms Room[]

  @@map("projects")
}

model Room {
  id         String  @id @default(cuid())
  projectId  String
  name       String
  areaSqm    Float?
  heightCm   Int?
  floorplan  Json?
  meshS3     String?
  lighting   Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  layouts Layout[]

  @@map("rooms")
}

model Layout {
  id          String   @id @default(cuid())
  roomId      String
  name        String
  placements  Json
  rationale   String?
  violations  Json?    @default("[]")
  score       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("layouts")
}

model Product {
  id           String   @id @default(cuid())
  vendor       String
  sku          String
  name         String
  category     String
  dimsCm       Json
  finishes     String[] @default([])
  priceCents   Int
  currency     String   @default("USD")
  url          String?
  assetGltf    String?
  assetUsdz    String?
  stock        Json?
  leadTimeDays Int?
  policy       Json?
  embedding    Unsupported("vector(768)")?
  updatedAt    DateTime @default(now()) @updatedAt

  @@unique([vendor, sku])
  @@map("products")
}

model Scan {
  id        String   @id @default(cuid())
  roomId    String
  frames    Json
  poses     Json
  quality   Float?
  status    String   @default("processing") // processing, completed, failed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("scans")
}

model Job {
  id        String   @id @default(cuid())
  type      String   // scan, layout, render, export
  status    String   @default("pending") // pending, processing, completed, failed
  input     Json
  output    Json?
  error     String?
  progress  Float?   @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("jobs")
}
